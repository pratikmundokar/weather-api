{
	"env": {
		"es6": true,
		"node": true,
		"browser": true
	},
	"extends": "eslint:recommended",
	"parserOptions": {
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"rules": {
		"indent": ["error", "tab"],
		"linebreak-style": ["error", "unix"],
		"no-console": ["warn", { "allow": ["info", "warn"] }],
		"quotes": ["error", "single"],
		"semi": ["error", "always"]
	}
}
